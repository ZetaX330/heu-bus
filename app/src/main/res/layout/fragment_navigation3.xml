<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Navigation1">

    <ImageView
        android:id="@+id/divider_image1"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#e5e5e5"
        app:layout_constraintBottom_toTopOf="@+id/setting_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/modify_information_image"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:background="@drawable/modify_information"
        app:layout_constraintEnd_toEndOf="@+id/modify_information_button"
        app:layout_constraintStart_toStartOf="@+id/modify_information_button"
        app:layout_constraintTop_toTopOf="@+id/modify_information_button" />

    <ImageView
        android:id="@+id/password_image"
        android:layout_width="350dp"
        android:layout_height="225dp"
        android:background="@drawable/card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.416" />

    <TextView
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:text="修改资料"
        android:textSize="15dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/modify_information_image"
        app:layout_constraintStart_toStartOf="@+id/modify_information_image"
        app:layout_constraintTop_toBottomOf="@+id/modify_information_image" />

    <ImageView
        android:id="@+id/modify_information_button"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginEnd="44dp"
        app:layout_constraintBottom_toBottomOf="@+id/account_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/name_text"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/avatar_image"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/avatar"
        app:layout_constraintBottom_toTopOf="@+id/divider_image2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/password_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_text"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_marginEnd="80dp"
        android:text="未填写名称"
        android:textColor="#000"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/avatar_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.253"
        app:layout_constraintStart_toEndOf="@+id/avatar_image"
        app:layout_constraintTop_toTopOf="@+id/avatar_image"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/card_text"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:text="我的公交卡"
        android:textColor="#000"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/password_image"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/password_image"
        app:layout_constraintTop_toBottomOf="@+id/divider_image2" />

    <TextView
        android:id="@+id/account_text"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="账号：xxxxxxxxxx"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/avatar_image"
        app:layout_constraintEnd_toEndOf="@+id/name_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/name_text" />

    <Button
        android:id="@+id/setting_button"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginBottom="224dp"
        android:background="#FFF"
        android:gravity="center_vertical"
        android:paddingLeft="50dip"
        android:text="设置"
        android:textColor="#000"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/password_image"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/password_image" />

    <ImageView
        android:id="@+id/divider_image2"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#e5e5e5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.201" />
</androidx.constraintlayout.widget.ConstraintLayout>